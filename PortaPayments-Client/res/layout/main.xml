<?xml version="1.0" encoding="utf-8"?>
<ScrollView	xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
   			android:background="#FFFFFF">
    		
	<LinearLayout	android:orientation="vertical"
	    			android:layout_width="fill_parent"
	    			android:layout_height="fill_parent">
	    			
		<TextView	android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content" 
		    		android:text="PortaPayments"
		    		android:gravity="center"
		    		android:background="#003366"
		    		android:textSize="12pt"
		    		android:textColor="#FFFFFF"
		    		android:layout_marginBottom="5dip"/>

		<TextView	android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content" 
		    		android:text="@string/request_payment"
		    		android:gravity="center"
		    		android:layout_marginTop="10dip"
		    		android:layout_marginBottom="5dip"
		    		style="?android:attr/listSeparatorTextViewStyle" />
		<TableLayout	android:layout_width="fill_parent"
						android:layout_height="wrap_content">
			<TableRow>
				<EditText	android:id="@+id/amount"
				    		android:layout_width="wrap_content" 
				    		android:layout_height="wrap_content" 
				    		android:layout_weight="1"
				    		android:gravity="right"
				    		android:text="1.00"/>
				<Button		android:id="@+id/currency"
							android:layout_gravity="right"
				    		android:layout_width="wrap_content" 
				    		android:layout_height="wrap_content" 
				    		android:layout_toRightOf="@id/amount"
				    		android:layout_alignTop="@id/amount"/>
			</TableRow>
		</TableLayout>
		<Button		android:id="@+id/show_qr_button"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:text="@string/show_qr"/>
					
		<TextView	android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content" 
		    		android:text="@string/scan_request"
		    		android:layout_marginTop="10dip"
		    		android:layout_marginBottom="5dip"
		    		android:gravity="center"
		    		style="?android:attr/listSeparatorTextViewStyle"/>
		<Button
			android:id="@+id/read_qr_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/read_qr"/>
	</LinearLayout>
</ScrollView>