<?xml version="1.0" encoding="utf-8"?>
<LinearLayout	xmlns:android="http://schemas.android.com/apk/res/android"
	   			android:orientation="vertical"
	   			android:background="#FFFFFF"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
	<TextView	android:layout_width="fill_parent" 
	    		android:layout_height="wrap_content" 
	    		android:text="PortaPayments"
	    		android:gravity="center"
	    		android:background="#003366"
	    		android:textSize="12pt"
	    		android:textColor="#FFFFFF"
	    		android:layout_marginBottom="5dip"/>
	<LinearLayout	android:layout_width="fill_parent"
		  			android:layout_height="wrap_content"
		  			android:orientation="horizontal">
		<TextView	android:textColor="#400"
					android:textStyle="bold"
					android:gravity="right"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
 					android:layout_weight="1"
	    			android:textSize="10pt"
 					android:text="@string/create_total"/>
		<TextView	android:id="@+id/total"
					android:textColor="#080"
					android:textStyle="bold"
					android:gravity="left"
					android:layout_alignParentRight="true"
	    			android:textSize="10pt"
 					android:layout_width="wrap_content"
 					android:layout_height="wrap_content"/>
	</LinearLayout>
			
	<ScrollView	android:layout_weight="1"
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent">
	    		
		<LinearLayout	android:orientation="vertical"
			    		android:paddingLeft="5dip"
			    		android:paddingRight="5dip"
		    			android:layout_width="fill_parent"
		    			android:layout_height="fill_parent">
		    			
			
			
			<EditText	android:id="@+id/note"
			    		android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:layout_weight="1"
			    		android:gravity="left"
			    		android:text="@string/note_default"
			    		android:imeOptions="actionDone" 
			    		android:singleLine="true"/>

			<TextView	android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="#000"
						android:text="@string/create_request_instructions"
						android:paddingTop="5dip"/>
			<LinearLayout	android:id="@+id/payment_1"
				  			android:layout_width="fill_parent"
				  			android:layout_height="wrap_content"
				  			android:orientation="vertical">
				<EditText	android:id="@+id/recipient"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" 
							android:inputType="textEmailAddress"
							android:imeOptions="actionNext"
							android:textColor="#000"/>
				<LinearLayout	android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
			  		<TextView	android:id="@+id/currency"
								android:layout_alignParentLeft="true"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#000"
								android:gravity="right|center_vertical"
								android:text="XXXXX" />
					<EditText	android:id="@+id/amount"
								android:gravity="right"
								android:textColor="#000"
								android:inputType="numberDecimal"
								android:imeOptions="actionNext"
								android:numeric="decimal"
								android:layout_alignParentRight="true"
			  					android:layout_width="fill_parent"
			  					android:layout_height="wrap_content"
			  					android:text="1.00"/>
				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout	android:id="@+id/payment_2"
				  			android:layout_width="fill_parent"
				  			android:layout_height="wrap_content"
				  			android:orientation="vertical">
				<EditText	android:id="@+id/recipient"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:inputType="textEmailAddress"
								android:textColor="#000"/>
				<LinearLayout	android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
			  		<TextView	android:id="@+id/currency"
								android:layout_alignParentLeft="true"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#000"
								android:gravity="right|center_vertical"
								android:text="XXXXX" />
					<EditText	android:id="@+id/amount"
								android:gravity="right"
								android:textColor="#000"
								android:inputType="numberDecimal"
								android:imeOptions="actionNext"
								android:numeric="decimal"
								android:layout_alignParentRight="true"
			  					android:layout_width="fill_parent"
			  					android:layout_height="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout	android:id="@+id/payment_3"
				  			android:layout_width="fill_parent"
				  			android:layout_height="wrap_content"
				  			android:orientation="vertical">
				<EditText		android:id="@+id/recipient"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:inputType="textEmailAddress"
								android:textColor="#000"/>
				<LinearLayout	android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
			  		<TextView	android:id="@+id/currency"
								android:layout_alignParentLeft="true"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#000"
								android:gravity="right|center_vertical"
								android:text="XXXXX" />
					<EditText	android:id="@+id/amount"
								android:gravity="right"
								android:textColor="#000"
								android:inputType="numberDecimal"
								android:imeOptions="actionNext"
								android:numeric="decimal"
								android:layout_alignParentRight="true"
			  					android:layout_width="fill_parent"
			  					android:layout_height="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout	android:id="@+id/payment_4"
				  			android:layout_width="fill_parent"
				  			android:layout_height="wrap_content"
				  			android:orientation="vertical">
				<EditText	android:id="@+id/recipient"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:inputType="textEmailAddress"
								android:textColor="#000"/>
				<LinearLayout	android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
			  		<TextView	android:id="@+id/currency"
								android:layout_alignParentLeft="true"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#000"
								android:gravity="right|center_vertical"
								android:text="XXXXX" />
					<EditText	android:id="@+id/amount"
								android:gravity="right"
								android:textColor="#000"
								android:inputType="numberDecimal"
								android:imeOptions="actionNext"
								android:numeric="decimal"
								android:layout_alignParentRight="true"
			  					android:layout_width="fill_parent"
			  					android:layout_height="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout	android:id="@+id/payment_5"
				  			android:layout_width="fill_parent"
				  			android:layout_height="wrap_content"
				  			android:orientation="vertical">
				<EditText	android:id="@+id/recipient"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:inputType="textEmailAddress"
								android:textColor="#000"/>
				<LinearLayout	android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
			  		<TextView	android:id="@+id/currency"
								android:layout_alignParentLeft="true"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#000"
								android:gravity="right|center_vertical"
								android:text="XXXXX" />
					<EditText	android:id="@+id/amount"
								android:gravity="right"
								android:textColor="#000"
								android:inputType="numberDecimal"
								android:imeOptions="actionNext"
								android:numeric="decimal"
								android:layout_alignParentRight="true"
			  					android:layout_width="fill_parent"
			  					android:layout_height="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout	android:id="@+id/payment_6"
				  			android:layout_width="fill_parent"
				  			android:layout_height="wrap_content"
				  			android:orientation="vertical">
				<EditText	android:id="@+id/recipient"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:inputType="textEmailAddress"
								android:textColor="#000"/>
				<LinearLayout	android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
			  		<TextView	android:id="@+id/currency"
								android:layout_alignParentLeft="true"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#000"
								android:gravity="right|center_vertical"
								android:text="XXXXX" />
					<EditText	android:id="@+id/amount"
								android:gravity="right"
								android:textColor="#000"
								android:inputType="numberDecimal"
								android:imeOptions="actionDone"
								android:numeric="decimal"
								android:layout_alignParentRight="true"
			  					android:layout_width="fill_parent"
			  					android:layout_height="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
			<Button		android:id="@+id/create_button"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:text="@string/create_qr_quick_button_text"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>	