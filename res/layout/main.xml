<?xml version="1.0" encoding="utf-8"?>
<LinearLayout	xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
	<TextView	android:layout_width="fill_parent" 
	    		android:layout_height="wrap_content" 
	    		android:text="PortaPayments"
	    		android:gravity="center"
	    		android:background="#003366"
	    		android:textSize="12pt"
	    		android:textColor="#FFFFFF"
	    		android:layout_marginBottom="5dip"/>
	
	<ScrollView	android:layout_weight="1"
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	   			android:background="#FFFFFF">
	    		
		<LinearLayout	android:orientation="vertical"
						android:focusable="true"
						android:focusableInTouchMode="true"
		    			android:layout_width="fill_parent"
		    			android:layout_height="fill_parent">
		    			
			<TextView	android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:text="@string/scan_request"
			    		android:layout_marginTop="10dip"
			    		android:layout_marginBottom="5dip"
			    		android:gravity="center"
			    		android:background="#003366"
			    		android:textSize="6pt"
			    		android:textColor="#FFFFFF"/>
			<Button
				android:id="@+id/read_qr_button"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/read_qr"/>
				
			<TextView	android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:text="@string/create_qr_quick"
			    		android:gravity="center"
			    		android:layout_marginTop="10dip"
			    		android:layout_marginBottom="5dip"
			    		android:background="#003366"
			    		android:textSize="6pt"
			    		android:textColor="#FFFFFF"/>
			<TableLayout	android:layout_width="fill_parent"
							android:layout_height="wrap_content">
				<TableRow>
					<EditText	android:id="@+id/amount"
					    		android:layout_width="wrap_content" 
					    		android:layout_height="wrap_content" 
					    		android:layout_weight="1"
					    		android:gravity="right"
					    		android:text="1.00"
								android:inputType="numberDecimal"
								android:imeOptions="actionNext"
								android:numeric="decimal"
					    		android:singleLine="true"/>
					<Button		android:id="@+id/currency"
								android:layout_gravity="right"
					    		android:layout_width="wrap_content" 
					    		android:layout_height="wrap_content" 
					    		android:layout_toRightOf="@id/amount"
					    		android:layout_alignTop="@id/amount"/>
				</TableRow>
			</TableLayout>
			<EditText	android:id="@+id/note"
			    		android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:text="@string/note_default"
			    		android:imeOptions="actionDone" 
			    		android:singleLine="true"/>
			<Button		android:id="@+id/create_qr_quick_button"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:text="@string/create_qr_quick_button_text"/>

			<TextView	android:layout_width="fill_parent" 
			    		android:layout_height="wrap_content" 
			    		android:text="@string/create_qr"
			    		android:gravity="center"
			    		android:layout_marginTop="10dip"
			    		android:layout_marginBottom="5dip"
			    		android:background="#003366"
			    		android:textSize="6pt"
			    		android:textColor="#FFFFFF"/>
			<Button		android:id="@+id/create_qr_button"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:text="@string/create_qr_button_text"/>

		</LinearLayout>

	</ScrollView>
</LinearLayout>	